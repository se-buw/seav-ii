<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE FOOTPRINT LINK -->

    <!-- <joint name="footprint_joint" type="fixed">
        <child link="footprint_link" />
        <origin xyz="0 0 0" rpy="0 0 0" />
    </joint> -->
    
    <link name="footprint_link">

    </link>

    <!-- BASE LINK -->

    <joint name="base_joint" type="fixed">
        <parent link="footprint_link" />
        <child link="base_link" />
        <origin xyz="-0.3 0.0 0.1" rpy="0 0 0" />
    </joint>

    <link name="base_link">

    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0.3 0 0.125"/>
    </joint>

    <link name="chassis">
        <visual>
            <geometry>
                <box size="1 0.2 0.25"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <box size="1 0.2 0.25"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="20" x="1" y="0.2" z="0.25">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/Red</material>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
    </gazebo>

    <!-- FRONT LEFT WHEEL -->

    <!-- steering -->

    <joint name="front_left_steering_joint" type="revolute">
        <parent link="base_link"/>
        <child link="left_steering_link"/>
        <origin xyz="0.6 0.21 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-${pi/8}" upper="${pi/8}" effort="20" velocity="5"/> <!-- TODO -->
    </joint>

    <link name="left_steering_link">
        <xacro:inertial_cylinder mass="0.01" radius="0.1" length="0.08">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    

    <!-- rotation -->

    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="left_steering_link"/>
        <child link="front_left_wheel"/>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
        <dynamics friction="0.8" damping="0.5" /> <!-- TODO -->
        <limit lower="-3.14159" upper="3.14159" effort="0" velocity="1" /> <!-- TODO -->
    </joint>

    <link name="front_left_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.1" length="0.08"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.1" length="0.08"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1" length="0.08" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/> 
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="front_left_wheel"> 
        <material>Gazebo/Black</material>
        <mu1>5</mu1> <!-- TODO -->
        <mu2>5</mu2> <!-- TODO -->
    </gazebo>

    <!-- FRONT RIGHT WHEEL -->

    <!-- steering -->

    <joint name="front_right_steering_joint" type="revolute">
        <parent link="base_link"/>
        <child link="right_steering_link"/>
        <origin xyz="0.6 -0.21 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-${pi/8}" upper="${pi/8}" effort="20" velocity="5"/> <!-- TODO -->
    </joint>

    <link name="right_steering_link">
        <xacro:inertial_cylinder mass="0.01" radius="0.1" length="0.08">
            <origin xyz="0 0 0" rpy="0 0 0"/> 
        </xacro:inertial_cylinder>
    </link>
    

    <!-- rotation -->

    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="right_steering_link"/>
        <child link="front_right_wheel"/>
        <origin xyz="0 0 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
        <dynamics friction="0.8" damping="0.5" /> <!-- TODO -->
        <limit lower="-3.14159" upper="3.14159" effort="0" velocity="1" /> <!-- TODO -->
    </joint>

    <link name="front_right_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.1" length="0.08"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.1" length="0.08"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1" length="0.08" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/> 
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="front_right_wheel">
        <material>Gazebo/Black</material>
        <mu1>5</mu1> <!-- TODO -->
        <mu2>5</mu2> <!-- TODO -->
    </gazebo>
    

    <!-- REAR LEFT WHEEL -->

    <!-- rotation -->

    <joint name="rear_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_left_wheel"/>
        <origin xyz="0 0.21 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
        <dynamics friction="0.8" damping="0.5" /> <!-- TODO -->
        <limit lower="-3.14159" upper="3.14159" effort="200" velocity="1" /> <!-- TODO -->
    </joint>

    <link name="rear_left_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.1" length="0.08"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.1" length="0.08"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1" length="0.08" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/> 
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="rear_left_wheel">
        <material>Gazebo/Black</material>
        <mu1>10</mu1> <!-- TODO -->
        <mu2>10</mu2> <!-- TODO -->
    </gazebo>

    <!-- REAR RIGHT WHEEL -->

    <!-- rotation -->

    <joint name="rear_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_right_wheel"/>
        <origin xyz="0 -0.21 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
        <dynamics friction="0.8" damping="0.5" /> <!-- TODO -->
        <limit lower="-3.14159" upper="3.14159" effort="200" velocity="1" /> <!-- TODO -->
    </joint>

    <link name="rear_right_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.1" length="0.08"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.1" length="0.08"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1" length="0.08" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/> 
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="rear_right_wheel">
        <material>Gazebo/Black</material>
        <mu1>10</mu1> <!-- TODO -->
        <mu2>10</mu2> <!-- TODO -->
    </gazebo>


